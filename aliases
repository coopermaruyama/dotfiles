# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# View my jira tasks
alias tasks="jira ls -a cooper.maruyama"

# docker
alias dcd="docker-compose down"
alias dcu="docker-compose up"

